---
import '@styles/global.css';

const { title } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <ul>
    <slot />
  </ul>
</div>

<style>
  h2 {
    font-size: 0.875rem;
    font-weight: 400;
    color: var(--color-secondary);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
