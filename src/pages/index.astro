---
import BaseLayout from '@layouts/BaseLayout.astro';
import Prose from '@components/Prose.astro';
import Works from '@components/Works.astro';
import Now from '@components/Now.astro';
import Connect from '@components/Connect.astro';

import '@styles/global.css';

const pageTitle = 'Samuel Duval';
// No need to specify metaDescription - BaseLayout will use the default
---

<BaseLayout pageTitle={pageTitle}>
  <div class="fade-up-container">
    <Prose />
    <Works />
    <Now />
    <Connect />
  </div>
</BaseLayout>

<style>
  .fade-up-container {
    /* Container for the animated sections */
  }

  .fade-up-container :global(section) {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeUp 0.8s ease-out forwards;
  }

  .fade-up-container :global(section:nth-child(1)) {
    animation-delay: 0s;
  }

  .fade-up-container :global(section:nth-child(2)) {
    animation-delay: 0.2s;
  }

  .fade-up-container :global(section:nth-child(3)) {
    animation-delay: 0.4s;
  }

  .fade-up-container :global(section:nth-child(4)) {
    animation-delay: 0.6s;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduce motion fallback */
  @media (prefers-reduced-motion: reduce) {
    .fade-up-container :global(section) {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>
